{% extends 'article/base.html.twig' %}

{% block main %}
    <h1>Les articles</h1>

    <table class="table">
{#        <thead>#}
{#            <tr>#}
{#                <th>Id</th>#}
{#                <th>Titre</th>#}
{#                <th>Contenue</th>#}
{#                <th>Prix</th>#}
{#                <th>Image</th>#}
{#                <th>Actions</th>#}
{#            </tr>#}
{#        </thead>#}
        <tbody>
        {% for article in articles %}
            <tr class="flex wrap">
{#                <td class="">{{ article.id }}</td>#}
                <td class="article-title flex">{{ article.title }}</td>
                <td class="article-content flex">{{ article.content }}</td>
                <td class="article-price">{{ article.price }}</td>
                <td class="article-image">{{ article.image }}</td>

                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                    <a {{ include('article/_delete_form.html.twig') }}</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article n'est ajouté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Créer un nouvel article</a>
{% endblock %}
