{# On extend la base sur cette page #}
{% extends 'Admin_Article/base.html.twig' %}

{% block main %}

    <h1>Les pizzas</h1>
    <table class="table">

        <tbody>

        {% for article in articles %}

            <tr class="">

{#              <td class="">{{ article.id }}</td>#}
                <td>
                    <div>
                        <img class="imageRedimention" src="{{ asset('./ArticleImages/'~article.title~'.png')}}">
                    </div>
                </td>
                <td class="article-title ">{{ article.title }}</td>
                <td class="article-content ">{{ article.description }}</td>
                <td class="article-price">{{ article.price }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article n'est ajouté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('article_new') }}">Créer un nouvel article</a>
{% endblock %}
